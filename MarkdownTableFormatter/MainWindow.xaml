<Window x:Class="MarkdownTableFormatter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Markdown Table Formatter" Height="350" Width="525">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition />
        <RowDefinition />
      </Grid.RowDefinitions>
    <TextBox Grid.Row="0" x:FieldModifier="private" x:Name="sourceBox" TextChanged="TextBoxBase_OnTextChanged" AcceptsReturn="True" FontFamily="Consolas"></TextBox>
    <TextBox Grid.Row="1" x:FieldModifier="private" x:Name="resultBox" AcceptsReturn="True" FontFamily="Consolas"></TextBox>
    </Grid>
</Window>
